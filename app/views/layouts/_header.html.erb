<header class="py-3 px-4 mb-4" style="background-color: #2c2c2c; border-bottom: 2px solid #b3003b;">

  <div class="d-flex justify-content-between align-items-center">
    <%= link_to root_path, class: "text-decoration-none", style: "color: #ffd700; font-size: 1.5rem;" do %>
      <i class="fa-solid fa-dice-d20 me-2"></i> Mathcollection
    <% end %>

    <div>
      <%= link_to 'ホーム', root_path, class: 'btn btn-sm btn-outline-warning' %>
      <%= link_to "所持カード一覧", user_cards_path, class: 'btn btn-sm btn-outline-light'%>
      <% if logged_in? %>
        <%= link_to 'ログアウト', logout_path, method: :delete, class: 'btn btn-sm btn-outline-light' %>
      <% else %>
        <a href="/auth/twitter" class="btn btn-sm btn-outline-light">ログイン</a>
      <% end %>
    </div>
  </div>
</header>
